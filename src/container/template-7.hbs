<header class='header'>
	{{#with header}}
		<a href="#test">
			{{> logo-t-7}}
		</a>
		
		<nav class='header_nav'>
			<div class="header_nav_right">
				{{> nav list=links}}
			</div>
		</nav>

		<div class="ad">
			<a href="{{url}}" class="url">{{url}}:{{text}}</a>
			<p class="userOnline">Users online: {{userOnline}}</p>
		</div>
	{{/with}}
</header>

<main class="main">
	{{#with info}}
		<div class="info">
			<h1 class="info_title">{{title}}</h1>
			<p class="info_description">{{description}}</p>
		</div>
	{{/with}}

	{{#with form}}
		<form class="form">
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}" />
				{{/each}}
			</div>

			<div class="form_checkbox">
				<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
				<div></div>
				<label for="{{checkbox.name}}">{{checkbox.label}}</label>
			</div>

			<button type="submit" class="form_button">{{button}}</button>
			<div class="form_hr"></div>
			<p class="form_info">{{info}}</p>
		</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
		<div class="updates_title">{{title}}</div>
		
		<div class="updates_list">
			{{#each list}}
				<div class="list_item">
					<div class="list_img" target="{{color}}">32x32</div>
					<div class="list_text">
						<div class="list_nickname">{{nickname}}</div>
						<p class="list_description">{{description}}</p>
					</div>
					
				</div>
			{{/each}}
		</div>

		{{#with show_all}}
			<a href="{{url}}" class="show_all_link">{{text}}</a>
		{{/with}}
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
		<h2 class="expirience_title">{{title}}</h2>

		<div class="expirience_badge">{{badge}}</div>

		<div class="expirience_list">
			{{#each list}}
				<div class="expirience_card">
					<strong class="expirience_name">{{name}}</strong>
					<p class="expirience_details">{{details}}</p>
				</div>
			{{/each}}
		</div>
	{{/with}}
</div>

<footer class="footer">
	{{#with footer}}
		{{> nav aaa=pages href=path text=name}}	
		<div class="">
			<span class="footer_copyright">{{copyright}}</span>
		</div>

		
	{{/with}}
</footer>



	

	
	
