<div class='hero'>
  {{#with hero}}
    <h1 class='title'>{{title}}</h1>
    <p class='description'>{{description}}</p>
    {{#with button}}
      <a
        href='{{url}}'
        class='button hero_button'
      >{{text}}</a>
    {{/with}}
  {{/with}}
</div>

<div class='about'>
  {{#with about}}
    <h3 class='about_title'>{{heading}}</h3>
    <p class='about_info'>{{info}}</p>
  {{/with}}
</div>

<div class='articles'>
  <div class='articles_top_line'>
    <div><h2 class='articles_title'>Our Articles</h2></div>
    <a href='{{url}}' class='button articles_button'>View
      All</a>
  </div>
  <div class='articles_block'>
    {{#each articles}}
		{{> articleCard}}
	{{/each}}
  </div>
</div>